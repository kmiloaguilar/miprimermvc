<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Romanos App", "ArabigosARomanos", "Convertidor", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Convertidor", "ArabigosARomanos", "Convertidor")</li>
                    <li>@Html.ActionLink("Calculadora", "Index", "CalculadoraRomana")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 15px;">
        
        <div class="row">
            <div class="col-lg-3">
                <div class="list-group">
                    @Html.ActionLink("Arabigos a Romanos", "ArabigosARomanos", "Convertidor", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Romanos a Arabigos", "RomanosAArabigos", "Convertidor", null, new { @class = "list-group-item" })
                </div>
            </div>
            <div class="col-lg-9">
                @RenderBody()        
            </div>
        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
