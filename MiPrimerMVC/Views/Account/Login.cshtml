@model MiPrimerMVC.Models.AccountLoginModel

@{
    ViewBag.Title = "Ingresar al sistema";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}



@using (Html.BeginForm("Login","Account",FormMethod.Post,new {@class="form-signin",role="form"}))
{
    @Html.ValidationSummary(true)
    <h2 class="form-signin-heading">Please sign in</h2>
    @Html.TextBoxFor(x=>x.Email,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Email)
    @Html.PasswordFor(x=>x.Password, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Password)
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(x=>x.RememberMe) Remember me
        </label>
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign In</button>
}
